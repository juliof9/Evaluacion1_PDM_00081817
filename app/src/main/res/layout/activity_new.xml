<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Factura"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/users2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Usuario: "
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/emails2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Correo: "
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/total2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Total: "
        android:layout_marginTop="15dp"/>
    
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:columnCount="3"
        android:layout_gravity="center"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Producto 1"
            android:textSize="11sp"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Producto 2"
            android:textSize="11sp"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/b3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Producto 3"
            android:textSize="11sp"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/b4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Producto 4"
            android:textSize="11sp"
            android:background="#FFC800FF"/>

        <Button
            android:id="@+id/b5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Producto 5"
            android:textSize="11sp"
            android:background="#FFFF9800"/>

        <Button
            android:id="@+id/b6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Producto 6"
            android:textSize="11sp"
            android:background="#8b164f"/>

        <Button
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto 7"
            android:textSize="11sp"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/b8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Producto 8"
            android:textSize="11sp"
            android:background="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/b9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Producto 9"
            android:textSize="11sp"
            android:background="#FFF7FF00"/>

    </GridLayout>

    <Button
        android:id="@+id/Share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Compartir"
        android:layout_gravity="center"/>

</LinearLayout>